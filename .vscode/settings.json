{
	"nixEnvSelector.nixFile": "${workspaceRoot}/shell.nix",
	"nix.enableLanguageServer": false,
	"nix.formatterPath": "nixpkgs-fmt",
	"nix.serverSettings": {
		// settings for 'nil' LSP
		"nil": {
			"diagnostics": {
				"ignored": [
					"unused_binding",
					"unused_with"
				]
			},
			"formatting": {
				"command": [
					"nixpkgs-fmt"
				]
			}
		}
	}
}